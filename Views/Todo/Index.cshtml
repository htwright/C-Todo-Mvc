@{
    ViewData["Title"] = "Todos";
}
@model List<Todo_Mvc.Models.Todo>
<div>
  <h2>Todos</h2>
  <form asp-action="Create" asp-controller="Todo">
  <input placeholder="new task" name="Task">
  <input type="submit"> submit task </input>
  </form>
  <ul>
    @foreach (var todo in Model) 
    {
      <li>
        <h1>ID: @todo.Id</h1>
        <label>@todo.Task</label>
        <label>@todo.Completed</label>
        
        <a asp-action="Delete" asp-route-id="@todo.Id">Delete</a>
      </li>
    }
  </ul>
</div>